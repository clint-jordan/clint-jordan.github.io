---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/common/Section.astro";
import SEO from "../../components/SEO.astro";
import { siteConfig } from "../../site.config"
import Hero from "../../components/cv/Hero.astro";
import Experience from "../../components/cv/Experience.astro"
import Summary from "../../components/cv/Summary.astro"
import Education from "../../components/cv/Education.astro"

import { experience, otherExperience } from "../../cv.config";

const config = siteConfig;
const baseUrl = import.meta.env.BASE_URL;
---

<Layout>
  <Fragment slot="head">
    <SEO
      title={config.blogMeta.title}
      description={config.blogMeta.description}
      longDescription={config.blogMeta.longDescription}
      keywords={config.blogMeta.keywords}
      cardImage={config.blogMeta.cardImage}
      url={`${baseUrl}/${config.texts.cvName}`}
    />
  </Fragment>
  <Section class="my-16">
    <Hero/>
    <Summary/>
    <Experience experience={experience}/>
    <Education/>
    <Experience experience={otherExperience}/>
  </Section>
</Layout>