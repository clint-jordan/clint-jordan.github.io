---
import { getUrl } from "../../lib/utils";
export type Props = {
  tags?: string[];
};
const { tags } = Astro.props
---

<div class="flex flex-row wrap gap-2">
  {
    tags?.map((tag) => (
      <a 
        href={getUrl(`tags/${tag.toLowerCase().replace(/\s+/g, '-').replace(/[^\w-]/g, '')}`)}
        class="tag"
      >
        {tag}
      </a>
    ))
  }
</div>